{
    "name": "yt-video-summarizer",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev:tailwind": "npx @tailwindcss/cli -i ./src/static/input.css -o ./src/static/output.css --watch",
        "dev:api": "fastapi dev src/app.py",
        "dev": "concurrently --kill-others --names 'tailwind,api' --prefix-colors 'blue,yellow' 'npm run dev:tailwind' 'npm run dev:api'",
        "build": "npx @tailwindcss/cli -i ./src/static/input.css -o ./src/static/output.css",
        "docker:build": "docker build -t yt-video-summarizer .",
        "docker:run": "docker run -p 8000:8000 --env-file .env yt-video-summarizer"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.18",
        "concurrently": "^9.2.1",
        "tailwindcss": "^4.1.18"
    }
}
